<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.addrecyclerviews.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etCourse"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Course Name"/>
    <EditText
        android:id="@+id/etTeacher"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="Teacher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="number"
            android:id="@+id/etClasses"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="Classes"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCourseList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_item_course_card"/>

</LinearLayout>
